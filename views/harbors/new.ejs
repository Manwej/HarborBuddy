<% include ../partials/header %>
<div class="container">
	
	<div class="row">
		<h1 class="mx-auto">Add new Harbor</h1>
		<div class="col-md-12 col-sm-12">		
			<div style= "width: 30%; margin: 30px auto;">
				<form action="/harbors" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="name" placeholder="name" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="image" placeholder="image url" multiple required>
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="description" placeholder="description">
					</div>
					<div class="form-group">
						<input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
					</div>
					<div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
</div>
						<div class="form-group">
							<button class="btn btn-primary btn-block">
							Submit!
						</button>
					</div>
				</form>
				<a href="/harbors" > Go back</a>
			</div>
			
		</div>
		
	</div>
</div>
<% include ../partials/footer %>