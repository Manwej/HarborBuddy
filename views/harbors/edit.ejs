<% include ../partials/header %>
<div class="container">
	
	<div class="row">
		<h1 class="mx-auto">Edit: <%= harbors.name %></h1>
		<div class="col-md-12 col-sm-12">		
			<div style= "width: 30%; margin: 30px auto;">
				<form action="/harbors/<%=harbors._id%>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="harbors[name]" value="<%=harbors.name%>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="harbors[image]" value="<%=harbors.image%>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="harbors[description]" value="<%=harbors.description%>">
					</div>
					<div class="form-group">
						<input class="form-control" type="number" name="harbors[price]"  min="0.01" step="0.01" value="<%=harbors.price%>">
					</div>
					<div class="form-group">
    					<label for="location">Location</label>
    					<input class="form-control" type="text" name="location" id="location" value="<%= harbors.location %>">
					</div>			
						<div class="form-group">
							<button class="btn btn-primary btn-block">
							Submit!
						</button>
					</div>
				</form>
				<a href="/harbors" > Go back</a>
			</div>
			
		</div>
		
	</div>
</div>
<% include ../partials/footer %>